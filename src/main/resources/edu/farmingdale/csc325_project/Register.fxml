<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.farmingdale.csc325_project.RegisterController">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Register New Account" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="400.0" spacing="20.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" spacing="15.0">
                     <children>
                        <TextField fx:id="textField_email1" promptText="Email" />
                        <TextField fx:id="textField_email2" promptText="Re-type Email" />
                        <TextField fx:id="textField_password1" promptText="Password" />
                        <TextField fx:id="textField_password2" promptText="Re-type Password" />
                        <Button fx:id="button_back" mnemonicParsing="false" onAction="#handleButton_back" prefWidth="60.0" text="Back" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" spacing="15.0">
                     <children>
                        <TextField fx:id="textField_firstName" promptText="First Name" />
                        <TextField fx:id="textField_lastName" promptText="Last Name" />
                        <DatePicker fx:id="datePicker_DOB" prefHeight="25.0" prefWidth="200.0" promptText="Date of Birth (DD-MM-YY)" />
                        <ComboBox fx:id="comboBox_accountType" prefWidth="200.0" promptText="Account Type" />
                        <Button fx:id="button_register" mnemonicParsing="false" onAction="#handleButton_register" prefWidth="60.0" text="Register" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
